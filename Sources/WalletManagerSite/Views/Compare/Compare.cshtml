@model WalletManagerSite.Models.CompareViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Title"];
}

<h2>@Localizer["Title"]</h2>

@{
    if (!string.IsNullOrWhiteSpace(ViewBag.Error))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }
}

<div class="container">
    <div class="col-md-6">
        <partial name="CompareTransactionsTablePartialView" model="Model.ExpectedTransactions" />
    </div>
    <div class="col-md-6">
        <partial name="CompareTransactionsTablePartialView" model="Model.ActualTransactions" />
    </div>
</div>
