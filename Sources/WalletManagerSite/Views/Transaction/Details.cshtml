@model WalletManagerSite.Models.TransactionViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h2>@Localizer["Title"]</h2>

@{
    if (!string.IsNullOrWhiteSpace(ViewBag.Error))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }
    else
    {
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Compte)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Compte)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.OperationDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.OperationDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Label)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Label)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Reference)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Reference)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Amount)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Category.Name)
                </dd>
            </dl>
        </div>
        <div>
            @Html.ActionLink(Localizer["Edit"].Value, "Edit", new { reference = Model.Reference }) |
            <a asp-action="Index">@Localizer["Back"]</a>
        </div>
    }
}
